<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xujiaji.mk.user.mapper.MkUserMapper">

    <select id="selectUserWithPhoneEmailPasswordById" resultType="com.github.xujiaji.mk.user.entity.MkUserPhoneEmailPassword">
        SELECT au.password, au.phone, au.email, u.* FROM mk_user u LEFT JOIN mk_auth_user au ON u.id = au.user_id WHERE u.id = ${userId}
    </select>
</mapper>
